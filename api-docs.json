            "$ref": "#/components/schemas/CourseResponseDto"
          },
          "name": {
            "type": "string"
          },
          "status": {
            "enum": ["EM_FORMACAO", "EM_ANDAMENTO", "FINALIZADA", "CANCELADA"],
