            "example": 1
          }
        },
        "required": ["studentId"]
      },
      "CreateLessonDto": {
        "type": "object",
        "properties": {
          "courseClassId": {
            "type": "number",
            "minimum": 1,
            "example": 1
          },
          "date": {
            "format": "date-time",
            "type": "string",
            "example": "2025-10-01"
          },
          "topic": {
            "type": "string",
            "maxLength": 255,
            "example": "Introduction to Python"
          }
        },
        "required": ["courseClassId", "date"]
      },
      "UpdateLessonDto": {
        "type": "object",
        "properties": {
          "date": {
            "format": "date-time",
            "type": "string",
            "example": "2025-10-01"
          },
          "topic": {
            "type": "string",
            "maxLength": 255,
            "example": "Introduction to Python"
          }
        }
      },
      "AttendanceResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "present": {
            "type": "boolean"
          },
          "notes": {
            "type": "string"
          },
          "student": {
            "$ref": "#/components/schemas/StudentResponseDto"
          },
          "lesson": {
            "$ref": "#/components/schemas/LessonResponseDto"
          },
          "createdAt": {
            "format": "date-time",
            "type": "string"
          },
          "updatedAt": {
            "format": "date-time",
            "type": "string"
          }
        },
        "required": [
          "id",
          "present",
          "student",
          "lesson",
          "createdAt",
          "updatedAt"
        ]
      },
      "CreateAttendanceDto": {
        "type": "object",
        "properties": {
          "lessonId": {
            "type": "number",
            "minimum": 1,
            "description": "ID of the lesson",
            "example": 1
          },
          "studentId": {
            "type": "number",
            "minimum": 1,
            "description": "ID of the student",
            "example": 1
          },
          "present": {
            "type": "boolean",
            "description": "Attendance status",
            "example": true
          },
          "notes": {
            "type": "string",
            "maxLength": 500,
            "description": "Notes about the attendance",
            "example": "Student was late"
          }
        },
        "required": ["lessonId", "studentId", "present"]
      },
      "UpdateAttendanceDto": {
        "type": "object",
        "properties": {
          "present": {
            "type": "boolean",
            "description": "Attendance status",
            "example": true
          },
          "notes": {
            "type": "string",
            "maxLength": 500,
