            "format": "date",
            "type": "string",
            "example": "2024-01-01"
          },
          "endDate": {
            "format": "date",
            "type": "string",
            "example": "2024-12-31"
          },
          "status": {
            "enum": ["EM_FORMACAO", "EM_ANDAMENTO", "FINALIZADA", "CANCELADA"],
            "type": "string",
            "example": "EM_FORMACAO",
            "default": "EM_FORMACAO"
          }
        }
      },
